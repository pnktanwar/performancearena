{
    "manifest_version": 2,
    "name": "Performance Arena",
    "version": "0.1.0",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "icons": {
        "16": "./icons/icon-16x16.png",
        "36": "./icons/icon-36x36.png",
        "48": "./icons/icon-48x48.png",
        "120": "./icons/icon-120x120.png"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content-script.js"
            ]
        }
    ],
    "web_accessible_resources": [
        "inject-script.js"
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_title": "Performance Arena"
    },
    "permissions": [
        "tabs",
        "activeTab",
        "storage",
        "unlimitedStorage"
    ],
    "content_security_policy": "script-src 'self' https://www.gstatic.com/; object-src 'self'"

}